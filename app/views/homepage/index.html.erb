
<div class="row text-center">
<h1 class="text-dark">ALL ALBUMS</h1>
</div>
<div class="text-center mb-3">
<%= search_form_for @q, url: root_path do |f| %>
<%= f.text_field :tags_alltags_cont, class:"form-controll" %>
<%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>



<div class="row mb-3 mx-auto  ">
<% @image_albums.each do |image_album|%>

 <div class="card col-sm-4 mb-2 ">
  <%=image_tag image_album.thumbnail, class: "p-2 img-fluid h-75 w-100"%>
  <div class="card-body text-center">
    <h5 class="card-title "> <%= link_to image_album.title, image_album, class: "text-danger text-decoration-none"%></h5>
    <small class="card-text"><%= image_album.all_tags%></small><br>
    <%= link_to "View Album", image_album, class: 'btn btn-outline-primary'%>
    
  </div>
 </div>  


<%end%>

 