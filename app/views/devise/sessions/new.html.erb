<h1 class="text-center text-danger">Log in</h1>
<div class="container w-50 text-center bg-light border border-dark">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "text-success" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-success" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %><br>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-outline-success" %>
  </div>
<% end %><br>

<small>Don't have an account?<%= render "devise/shared/links" %></small>
</div>