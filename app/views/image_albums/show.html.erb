<h1 class = "text-danger"><%= @image_album.title %></h1>
<p class="border-bottom border-dark text-dark"><%= @image_album.description %></p>
<div class="row">
<% @image_album.images.each do |image| %>
 <div class="card col-sm-3 mb-2  ">
  <%=image_tag image, class: "p-2  h-75 w-100 "%>
  
  <div class="card-body ">
  <% if @currentuser == @user%>
    <p class="card-title text-center"><%= link_to "Delete", purge_image_image_album_path(@image_album, image_id: image.id), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "btn btn-outline-danger btn-sm" %> </p>
    <%end%>
  </div>
  </div>
<%end%><br>

</div>

<% if @currentuser == @user %>
<div class="row mt-3 mb-2 border border-dark p-2">
<div class="col-sm">

<%= form_with model: @image_album do |form|
%>
Add Images <br>

<%= form.file_field :images, multiple: true, accept: 'image/*', class: "btn btn-sm" %>

 <%= form.submit :Add, class: "btn btn-outline-primary btn-sm" %>
<% end %>

</div>

<div class = "col-sm ms-auto text-end">
<%= link_to "Edit Album", edit_image_album_path, class: "btn btn-outline-success btn-sm mb-2" %><br>

<%= link_to "Delete Album", image_album_path(@image_album), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "btn btn-outline-danger btn-sm" %>
</div>
</div>
<%end%>