<div class="row text-end mb-3">
<div class="col-sm text-start">
<h1>My Albums</h1>
</div>
<div class="col-sm">
<%=button_to "Create new Ablum", new_image_album_path, class: "btn btn-success"%>
</div>
</div>
<div class="row mb-3">
<% @image_albums.each do |image_album|%>

 <div class="card col-sm-4 mb-2">
  <%=image_tag image_album.thumbnail, class: "p-2 img-fluid h-75 w-100"%>
  <div class="card-body text-center">
    <h5 class="card-title "> <%= link_to image_album.title, image_album, class: "text-danger text-decoration-none"%></h5>
  </div>
 </div>  

<%end%>
</div>